{% comment %}
  Sección: Related Variants
  Muestra productos relacionados como variantes visuales usando metacampos
{% endcomment %}

{%- liquid
  assign related_products = product.metafields.custom.related_variants.value
  assign section_id = section.id
  assign show_price = section.settings.show_price
  assign show_vendor = section.settings.show_vendor
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile
-%}

{% if related_products and related_products.size > 0 %}
  <div class="related-variants" data-section-id="{{ section_id }}">
    <div class="page-width">
      
      {% if section.settings.title != blank %}
        <div class="related-variants__header">
          <h2 class="related-variants__title {{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
          {% if section.settings.description != blank %}
            <div class="related-variants__description rte">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="related-variants__grid" 
           data-columns-desktop="{{ columns_desktop }}" 
           data-columns-mobile="{{ columns_mobile }}">
        
        {% for related_product in related_products %}
          <div class="related-variants__item">
            <div class="related-variants__card">
              
              <!-- Imagen del producto -->
              <div class="related-variants__image-wrapper">
                <a href="{{ related_product.url }}" class="related-variants__image-link">
                  {% if related_product.featured_image %}
                    <img src="{{ related_product.featured_image | image_url: width: 400 }}"
                         alt="{{ related_product.featured_image.alt | default: related_product.title }}"
                         class="related-variants__image"
                         loading="lazy"
                         width="400"
                         height="{{ 400 | divided_by: related_product.featured_image.aspect_ratio | round }}">
                  {% else %}
                    <div class="related-variants__placeholder">
                      {% render 'icon-product' %}
                    </div>
                  {% endif %}
                </a>
                
                <!-- Badge si está en oferta -->
                {% if related_product.compare_at_price > related_product.price %}
                  <div class="related-variants__badge">
                    <span class="badge badge--sale">
                      {% assign savings = related_product.compare_at_price | minus: related_product.price %}
                      {% assign savings_percent = savings | times: 100.0 | divided_by: related_product.compare_at_price | round %}
                      -{{ savings_percent }}%
                    </span>
                  </div>
                {% endif %}
              </div>

              <!-- Información del producto -->
              <div class="related-variants__info">
                {% if show_vendor and related_product.vendor != blank %}
                  <div class="related-variants__vendor">
                    {{ related_product.vendor }}
                  </div>
                {% endif %}

                <h3 class="related-variants__product-title">
                  <a href="{{ related_product.url }}" class="related-variants__product-link">
                    {{ related_product.title }}
                  </a>
                </h3>

                {% if show_price %}
                  <div class="related-variants__price">
                    {% if related_product.compare_at_price > related_product.price %}
                      <span class="related-variants__price-sale">
                        {{ related_product.price | money }}
                      </span>
                      <span class="related-variants__price-compare">
                        {{ related_product.compare_at_price | money }}
                      </span>
                    {% else %}
                      <span class="related-variants__price-regular">
                        {{ related_product.price | money }}
                      </span>
                    {% endif %}
                  </div>
                {% endif %}

                <!-- Botón de acción -->
                {% if section.settings.show_quick_view %}
                  <div class="related-variants__actions">
                    <a href="{{ related_product.url }}" class="related-variants__quick-view-btn button button--secondary">
                      {{ section.settings.button_text | default: 'Ver producto' }}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Related Variants",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Otros colores disponibles",
      "label": "Título de la sección"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descripción (opcional)"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h3",
          "label": "Pequeño"
        },
        {
          "value": "h2",
          "label": "Mediano"
        },
        {
          "value": "h1",
          "label": "Grande"
        }
      ],
      "default": "h2",
      "label": "Tamaño del título"
    },
    {
      "type": "header",
      "content": "Configuración de productos"
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "default": true,
      "label": "Mostrar precio"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Mostrar marca/vendor"
    },
    {
      "type": "checkbox",
      "id": "show_quick_view",
      "default": true,
      "label": "Mostrar botón de acción"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Ver producto",
      "label": "Texto del botón"
    },
    {
      "type": "header",
      "content": "Diseño"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Columnas en escritorio"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 columna"
        },
        {
          "value": "2",
          "label": "2 columnas"
        },
        {
          "value": "3",
          "label": "3 columnas"
        }
      ],
      "default": "2",
      "label": "Columnas en móvil"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background-1",
          "label": "Fondo 1"
        },
        {
          "value": "background-2",
          "label": "Fondo 2"
        },
        {
          "value": "inverse",
          "label": "Inverso"
        },
        {
          "value": "accent-1",
          "label": "Acento 1"
        },
        {
          "value": "accent-2",
          "label": "Acento 2"
        }
      ],
      "default": "background-1",
      "label": "Esquema de color"
    },
    {
      "type": "header",
      "content": "Espaciado de sección"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding superior",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding inferior",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Related Variants"
    }
  ]
}
{% endschema %}